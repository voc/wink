- content_for :title, "Edit #{@item_type.name} - "

%h2= "Edit '#{@item_type.name}'"
= render partial: 'record_errors', locals: { record: @item_type }

= form_for(@item_type, as: :item, url: item_type_path(@item_type), method: 'PUT') do |f|
  = render partial: 'form', locals: {f: f}, object: @item_type

  = f.submit "Edit"
  = link_to 'Cancel', item_types_path

:javascript
  $(function() {
    $('#item_date_of_purchase').datepicker({ dateFormat: 'dd-mm-yy' }).val();
  });
