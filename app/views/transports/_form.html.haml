
%p
  %label{for: 'source_event_id'}= "From Event:"
  = f.collection_select :source_event_id, Event.where(end_date: Date.today-5..4.weeks.after).or(Event.where(id: @transport.source_event_id)).order('start_date DESC'), :id, :name, {include_blank: true}

%p
  %label{for: 'source_address'}= "Address:"
  %label.hint
  = f.text_area :source_address

%p
  %label{for: 'pickup_time'}= "Pickup date:"
  = f.datetime_field :pickup_time

%p
  %label{for: 'destination_event_id'}= "Destination Event:"
  = f.collection_select :destination_event_id, Event.where(end_date: Date.today-5..4.weeks.after).or(Event.where(id: @transport.destination_event_id)).order(:start_date), :id, :name, {include_blank: true}

%p
  %label{for: 'destination_address'}= "Address:"
  %label.hint
  = f.text_area :destination_address

%p
  %label{for: 'delivery_time'}= "Delivery date:"
  = f.datetime_field :delivery_time
